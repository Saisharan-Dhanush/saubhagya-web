# SAUBHAGYA Backend Service URLs - Production Environment
# Production Domain: https://saubhagya.dhanushhealthcare.com

# ============================================
# MICROSERVICES CONFIGURATION
# ============================================

# IoT Service (Port 8080)
VITE_IOT_SERVICE_URL=https://saubhagya.dhanushhealthcare.com/iot

# Auth Service (Port 8081)
VITE_AUTH_SERVICE_URL=https://saubhagya.dhanushhealthcare.com/auth-service

# Biogas Service (Port 8082)
VITE_BIOGAS_SERVICE_URL=https://saubhagya.dhanushhealthcare.com/biogas-service

# Commerce/Sales Service (Port 8083)
VITE_COMMERCE_SERVICE_URL=https://saubhagya.dhanushhealthcare.com/commerce-service

# Reporting/Analytics Service (Port 8084)
VITE_REPORTING_SERVICE_URL=https://saubhagya.dhanushhealthcare.com/reporting-service

# Government Service (Port 8085)
VITE_GOVERNMENT_SERVICE_URL=https://saubhagya.dhanushhealthcare.com/government-service

# Gaushala Service (Port 8086)
VITE_GAUSHALA_SERVICE_URL=https://saubhagya.dhanushhealthcare.com/gaushala-service

# Purification Service (Port 8087)
VITE_PURIFICATION_SERVICE_URL=https://saubhagya.dhanushhealthcare.com/purification-service

# ============================================
# API CONFIGURATION
# ============================================

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# API Retries
VITE_API_RETRIES=3

# API Retry Delay (milliseconds)
VITE_API_RETRY_DELAY=2000

# ============================================
# ENVIRONMENT
# ============================================

# Current environment (development, staging, production)
VITE_ENV=production

# Enable debug logging (set to false in production)
VITE_DEBUG=false
