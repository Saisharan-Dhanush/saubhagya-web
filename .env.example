# SAUBHAGYA Backend Service URLs - Example Configuration
# Copy this file to .env and update the URLs for your environment
#
# DEVELOPMENT: Use localhost URLs (default below)
# PRODUCTION: Use https://saubhagya.dhanushhealthcare.com/{service-name}

# ============================================
# MICROSERVICES CONFIGURATION
# ============================================

# IoT Service (Port 8080)
VITE_IOT_SERVICE_URL=http://localhost:8080/iot

# Auth Service (Port 8081)
VITE_AUTH_SERVICE_URL=http://localhost:8081/auth-service

# Biogas Service (Port 8082)
VITE_BIOGAS_SERVICE_URL=http://localhost:8082

# Commerce/Sales Service (Port 8083)
VITE_COMMERCE_SERVICE_URL=http://localhost:8083

# Reporting/Analytics Service (Port 8084)
VITE_REPORTING_SERVICE_URL=http://localhost:8084

# Government Service (Port 8085)
VITE_GOVERNMENT_SERVICE_URL=http://localhost:8085

# Gaushala Service (Port 8086)
VITE_GAUSHALA_SERVICE_URL=http://localhost:8086/gaushala-service

# Purification Service (Port 8087)
VITE_PURIFICATION_SERVICE_URL=http://localhost:8087/purification-service

# ============================================
# API CONFIGURATION
# ============================================

# API Timeout (milliseconds)
VITE_API_TIMEOUT=15000

# API Retries
VITE_API_RETRIES=3

# API Retry Delay (milliseconds)
VITE_API_RETRY_DELAY=1000

# ============================================
# ENVIRONMENT
# ============================================

# Current environment (development, staging, production)
VITE_ENV=development

# Enable debug logging
VITE_DEBUG=true
